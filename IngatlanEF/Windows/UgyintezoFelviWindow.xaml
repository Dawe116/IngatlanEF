<Window x:Class="IngatlanEF.Windows.UgyintezoFelviWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanEF.Windows"
        mc:Ignorable="d"
        Title="Ügyintéző felvitele" Height="300" Width="300">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Név: "/>
            <TextBox Name="txbUsername"/>
            
            <Label Content="Telefonszám: "/>
            <TextBox Name="txbPhone"/>
            
            <Label Content="Email: "/>
            <TextBox Name="tbxEmail"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnAdd" Content="Hozzáadás" Margin="5" Click="btnAdd_Click"/>
                <Button Name="btnCancel" Content="Mégse" Margin="5" Click="Cancel"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
